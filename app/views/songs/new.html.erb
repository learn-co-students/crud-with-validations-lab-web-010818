<h1>Create a Song</h1>

<% @song.errors.full_messages.each do |song| %>
      <%= song %> <br>
<% end %>
<br>
<%= form_for @song do |s| %>
  <label>Title:</label>
  <%= s.text_field :title %><br><br>

  <label>Artist:</label>
  <%= s.text_field :artist_name %><br><br>

  <label>Genre:</label>
  <%= s.text_field :genre %><br><br>

  <label>Released?</label>
  <%= s.check_box :released %><br><br>

  <label>Year released:</label>
  <%= s.number_field :release_year %><br><br>

  <%= s.submit %>
<% end %>
